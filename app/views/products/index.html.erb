<p id="notice"><%= notice %></p>

<h1 class="padding">Products</h1>
<table>
  <thead>
    <tr>
      <th class="space green">Name</th>
      <th class="space green">Description</th>
      <th class="space green">Image url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td class="space"><%= product.name %></td>
        <td class="space"><%= product.description %></td>
        <td class="space"><%= product.image_url %></td>
        <td class="space "><%= link_to 'Show', product %></td>
        <td class="space blue"><%= link_to 'Edit', edit_product_path(product) %></td>
        <td class="space red"><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

